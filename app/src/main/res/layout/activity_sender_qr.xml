<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
   >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Files to Server"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/ipEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Server IP Address"
            android:inputType="text"
            android:padding="12dp"/>

        <Button
            android:id="@+id/qrBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan QR"
            android:layout_marginStart="8dp"

            android:textColor="@color/white"/>
    </LinearLayout>

    <Button
        android:id="@+id/selectFileButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Files"
        android:layout_marginBottom="16dp"

        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/selectedFilesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No files selected"
        android:layout_marginBottom="16dp"
       />

    <Button
        android:id="@+id/sendFileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Files"
        android:layout_marginBottom="16dp"

        android:textColor="@color/white"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready to send files"
        android:textAlignment="center"
        android:textColor="@color/black"/>

</LinearLayout>