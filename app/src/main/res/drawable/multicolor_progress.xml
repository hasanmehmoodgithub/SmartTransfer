<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Layer (Gray) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Light Gray -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- First Progress (Red) -->
    <item android:id="@+id/progress_red">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FF0000"/> <!-- Red -->
                <corners android:radius="10dp"/>
            </shape>
        </clip>
    </item>

    <!-- Second Progress (Green) -->
    <item android:id="@+id/progress_green">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#00FF00"/> <!-- Green -->
                <corners android:radius="10dp"/>
            </shape>
        </clip>
    </item>

    <!-- Third Progress (Blue) -->
    <item android:id="@+id/progress_blue">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#0000FF"/> <!-- Blue -->
                <corners android:radius="10dp"/>
            </shape>
        </clip>
    </item>

    <!-- Fourth Progress (Orange) -->
    <item android:id="@+id/progress_orange">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FFA500"/> <!-- Orange -->
                <corners android:radius="10dp"/>
            </shape>
        </clip>
    </item>

    <!-- Fifth Progress (Purple) -->
    <item android:id="@+id/progress_purple">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#800080"/> <!-- Purple -->
                <corners android:radius="10dp"/>
            </shape>
        </clip>
    </item>

</layer-list>
