<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow (optional) -->
    <item android:top="4dp" android:bottom="-4dp">
        <shape android:shape="oval">
            <solid android:color="#20000000" /> <!-- Shadow color -->
            <size android:width="56dp" android:height="56dp" /> <!-- Match FAB size -->
        </shape>
    </item>

    <!-- Circular background -->
    <item android:top="-16dp"> <!-- Adjust to lift the FAB upward -->
        <shape android:shape="oval">
            <solid android:color="#2196F3" /> <!-- FAB color -->
            <size android:width="56dp" android:height="56dp" /> <!-- FAB size -->
        </shape>
    </item>
</layer-list>